-content_for(:head) do
  %style(type="text/css")
    :sass
      !w= #{w}
      !h= #{h}
      !m= 0
      .#{name} td.tile
        width= !w
        min-width= !w
        max-width= !w
        height= !h
        min-height= !h
        max-height= !h
        .action-box
          margin= !m
          width= !w - 2*!m
          height= !h - 2*!m
          td.owner
            height: 30
          td.points
            height: 30
      .#{name}
        .caption
          overflow: hidden
          white-space: nowrap
          width= 3*!w
